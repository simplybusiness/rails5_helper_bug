%p#notice= notice
%h1 Widgets
%p= boldered("index.html.erb")
%p= some_different_helper("index.html.erb")
%p= subdir_helper("index.html.erb")
= render "partial"
%table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @widgets.each do |widget|
      %tr
        %td= widget.name
        %td= link_to 'Show', widget
        %td= link_to 'Edit', edit_widget_path(widget)
        %td= link_to 'Destroy', widget, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Widget', new_widget_path
